<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.thebluealliance.spectrum.SpectrumPreferenceCompat
        android:key="themeColor"
        android:summary="테마색을 설정합니다."
        android:title="테마색 설정"
        android:defaultValue="@color/greenPrimary"
        app:spectrum_closeOnSelected="false"
        app:spectrum_colors="@array/themeColors"/>

    <PreferenceCategory
        app:key="dDayCategory"
        app:title="D-DAY">

        <SwitchPreferenceCompat
            app:key="dDayEnabled"
            app:title="기능 활성화 하기"
            app:summary="D-DAY 기능을 활성화합니다."
            android:defaultValue="true"/>

        <dev.jun0.dcalimi.MyMultiSelectListPreference
            app:key="dDayOption"
            app:dependency="dDayEnabled"
            app:title="보여줄 내용 선택"
            app:summary="%s"
            app:entries="@array/dDayOption"
            app:entryValues="@array/dDayOptionValue"
            android:defaultValue="@array/dDayOptionDefaultValue"/>

        <Preference
            app:key="dDayDownload"
            app:dependency="dDayEnabled"
            app:title="정보 가져오기"
            app:summary="D-DAY 정보를 가져오거나 새로 고칩니다."/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="timeScheduleCategory"
        app:title="시간표">

        <Preference
            app:key="timeScheduleDownload"
            app:title="정보 가져오기"
            app:summary="시간표 정보를 가져옵니다."/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="schoolMealCategory"
        app:title="급식">

        <CheckBoxPreference
            app:key="schoolMealAutoDownload"
            app:title="자동으로 가져오기"
            app:summary="저장된 급식이 없을경우 자동으로 가져옵니다."/>

        <Preference
            app:key="schoolMealDownload"
            app:title="정보 가져오기"
            app:summary="급식 정보를 가져오거나 새로 고칩니다."/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="schoolEventCategory"
        app:title="학사일정">

        <CheckBoxPreference
            app:key="schoolEventAutoDownload"
            app:title="자동으로 가져오기"
            app:summary="저장된 학사일정이 없을경우 자동으로 가져옵니다."/>

        <Preference
            app:key="schoolEventDownload"
            app:title="정보 가져오기"
            app:summary="학사일정 정보를 가져오거나 새로 고칩니다."/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>